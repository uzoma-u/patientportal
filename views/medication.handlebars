
<div class="container">
    <br>
    <nav>
        <div class="row">
            <div class="col-md-9">
                <a class="nav-link " id="nav-home-tab" href="/" role="tab" aria-controls="nav-home">Home</a>
            </div>
            <div class="col-md-3">
                <a class="nav-link" id="nav-contact-tab" href="/user/logout" role="tab" aria-controls="nav-contact">Logout</a>
            </div>
        </div>
    </nav>
    
        <div>
            <h4></h4>
        </div>
        <div class="row" id="medication__container">
            <div class="col-sm-10">
                <section>
                        
                        <div class="medication__cols">
                            <p><small>Name</small><br> {{medication.medication_name}}</p>
                            <p><small>Strength</small><br> {{medication.strength}}</p>
                            <p class="card-text"><small>Form</small><br>{{medication.dosage_form}}</p>
                            <p><small>Frequency</small><br>{{medication.frequency}} Times, {{medication.frequency_type}}</p>
                            <p><small>Dose</small><br>{{medication.dose}} Tablets</p>
                            <p><small>Quantity</small><br>{{medication.quantity}}</p>
                            <p class="card-text"><small>Refill Date</small><br>{{medication.refill_date}}</p>
                            <p class="card-text"><small>Prescribed By</small><br>{{medication.prescribed_by}}</p>
                            <br>                        
                        </div>
                </section>
                </div>

                <div class="col-sm-5">
                <section>
                <div class="medication__reminder__container">
                <div>
                    {{#if medication.reminder}}
                        <div>
                            <h6>Reminder</h6>
                        </div>
                    
                        <p><br>{{reminder.reminder_frequency_type}} Medication</p>
                        <p><small>Schedule | Dose</small><br>
                        {{#each reminderObj}}
                            {{reminder_time}}:00 | <small>{{reminder_dose}} PILL</small> </p>
                        {{/each}}
                            <p><small>Quantity | Remaining</small><br>{{medication.quantity}} Tablets | {{medRemain}} Tablet</p>
                            <p><small>Duration</small><br>{{duration}} </p>
                            <a href="/user/reminder/{{reminder.id}}/delete" class="btn btn-secondary"><small>Delete Schedule</small></a>
                        {{else}}
                            
                            <a href="/user/medications/{{medication.id}}/newreminder" class="btn btn-secondary">Add Reminder</a>
                    {{/if}}
                   
                </div>

            </section>
            </div>
    </div>
    <br>
</div>