
<div class="container">
    
    <br><br>
    <h3 class="text-center mb-3">Register</h3>
    <br><br><br>
    <div>
    {{#if success_msg}}
        {{success_msg}}
    {{/if}}

    {{#if error_msg}}
        {{error_msg}}
    {{/if}}

    {{#if error}}
        {{error}}
    {{/if}}
     </div>

    <div>
        {{#if errors}}
            {{#if errors.name}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{errors.name}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}
            {{#if errors.email}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{errors.email}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}
            {{#if errors.password}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{errors.password}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}
            {{#if errors.confirmpassword}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{errors.confirmpassword}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}
        {{/if}}
    </div>
    <div class="row" id="register__patient">
        <div class="form-group col-md-1"></div>
        <br><br><br><br>
        
        <div class="form-group col-md-8">
            <br><br><br>
            <form action="/user/register" method="POST" class="">
                <div class="form-group col-md">
                    <label for="name"> Name:</label>
                    <input type="text" class="form-control" name="name" placeholder="" id=""><br>
                </div>
               
                <div class="form-group col-md">
                    <label for="email">Email:</label>
                    <input type="text" class="form-control" name="email" placeholder="" id=""><br>
                </div>
                <div class="form-group col-md">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" name="password" placeholder="" id=""><br>
                </div>
                <div class="form-group col-md">
                    <label for="confirm password">Confirm Password:</label>
                    <input type="password" class="form-control" name="confirmpassword" placeholder="" id=""><br>
                </div>
                <div class="form-group col-md">
                <button type="submit" class="btn btn-secondary">Submit</button>
                </div>
            </form>
            
                <p>Already registered?<a class="nav-link" href="/user/login">Log In</a></p>
            
        </div>
        
    </div>
   
        
    
<br><br><br><br>
</div>
    
    



